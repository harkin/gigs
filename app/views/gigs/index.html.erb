<div class="max-w-6xl mx-auto" data-controller="filter">
  <!-- Header Section -->
  <header class="mb-6 flex flex-wrap items-start justify-between gap-4">
    <div>
      <h1 class="text-3xl font-semibold tracking-tight page-heading">Dublin Gigs</h1>
      <p style="color: var(--text-muted); margin-top: 0.25rem;">
        <span data-filter-target="count"><%= @events.count %></span> events
        <span style="margin: 0 0.5rem; opacity: 0.4;">|</span>
        Updated <%= @last_refreshed_at&.to_formatted_s(:short) || "Never" %>
        <% if @last_refreshed_at.blank? || @last_refreshed_at < 1.day.ago %>
          <a href="/refresh" style="margin-left: 0.5rem;">Refresh</a>
        <% end %>
      </p>
    </div>
    <%= render "gigs/theme_switcher" %>
  </header>

  <!-- Filter Bar -->
  <%= render "gigs/filter_bar" %>

  <!-- Table Layout -->
  <%= render "gigs/table_layout" %>

  <!-- Cards Layout -->
  <%= render "gigs/cards_layout" %>
</div>
